---
import Image from "astro/components/Image.astro"

const {img, title, price, path} = Astro.props

---

<li>
    <a href={"/products/" + path}>
        <article>
            <Image src={img} alt={title} inferSize />
            <!-- <img src={img} alt={title}> -->
            <h2>{title}</h2>
<p>{price},-</p>
<button>Add to basket</button>
        </article>
    </a>
</li>

<style>

    li {
        list-style-type: none;
    }
    article {
        display: grid;
        gap: .5rem;
        padding: 1.5rem;
        background-color: #fff;
        border-radius: 10px;
        filter: drop-shadow(5px 5px 5px #eee)
    }

    a {
        text-decoration: none;
        color: #000;
    }

    button {
        background-color: brown;
        color: white;
        outline: none;
        border: none;
        border-radius: 10px;
        padding: .75rem .5rem;
        text-transform: uppercase;
        font-weight: 600;
    }
</style>